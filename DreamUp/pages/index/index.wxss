/**index.wxss**/
.slide-image{
  width:100%;
}
.panel{
  border-radius: 40rpx;
  margin-top:40rpx;
}
.panel-header{
  display: flex;
  align-items: center;
}
.panel-content{
  margin-top:20rpx;
  position: relative;
}
.panel-title{
  background-color:#000;
  opacity: 0.5;
  height:120rpx;
  width: 100%;
  position: absolute;
  top: 0;
  left:0;
  z-index:1;
}
.panel-content .title{
  text-align: center;
  position: absolute;
  height:120rpx;
  width: 100%;
  z-index:999;
  top:0;
  left:0;
}
.panel-bg-image{
  width: 100%;
  height: 400rpx;
  border-radius: 10rpx;
}
.username{
  margin-left:10rpx;
}
.date{
  flex: 1;
  text-align: right;
}