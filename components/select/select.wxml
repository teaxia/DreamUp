<!--components/select/select.wxml-->
<view class='line-b top-bar'>
  <i-row>
    <i-col span="12" i-class="col-class">
      <view class="select">
        <picker bindchange="bindAreaChange" range-key="value" value="{{AreaIndex}}" range="{{areadata}}">
        <view class="picker line-r">
          区域：{{area}}
          <i-icon type="unfold" />
        </view>
        </picker>
      </view>
    </i-col>
    <i-col span="12" i-class="col-class">
      <view class="select">
        <picker bindchange="bindSexChange" range-key="value" name="{{SexIndex}}" range="{{sexdata}}">
        <view class="picker">
          性别：{{sex}}
          <i-icon type="unfold" />
        </view>
        </picker>
      </view>
    </i-col>
  </i-row>
</view>